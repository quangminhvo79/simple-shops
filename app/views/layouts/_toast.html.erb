<%= turbo_frame_tag :toast do %>
  <div class="toast toast-end">
    <% if alert %>
      <div role="alert" class="alert alert-error alert-soft" data-controller="toast">
        <span><%= alert %>.</span>
      </div>
    <% end %>
    <% if notice %>
      <div role="alert" class="alert alert-success alert-soft" data-controller="toast">
        <span><%= notice %></span>
      </div>
    <% end %>
  </div>
<% end %>
